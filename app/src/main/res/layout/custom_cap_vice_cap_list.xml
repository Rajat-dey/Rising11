<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/iv_player_photo"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_my_profile"
        android:layout_marginRight="16dp"/>

    <TextView
        android:id="@+id/tv_player_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="J Buttler"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/black"
        android:layout_toRightOf="@id/iv_player_photo"/>


    <TextView
        android:id="@+id/tv_teams"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RR - WK"
        android:layout_toRightOf="@id/iv_player_photo"
        android:layout_below="@id/tv_player_name"/>

    <TextView
        android:id="@+id/tv_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="18.5 pts"
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_toRightOf="@id/tv_player_name"
        android:layout_toLeftOf="@id/iv_add_C"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/iv_add_VC"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_round_gray_stroke"
        android:text="VC"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/iv_add_C"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="C"
        android:textSize="16sp"
        android:gravity="center"
        android:background="@drawable/bg_round_gray_stroke"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:layout_toLeftOf="@id/iv_add_VC"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/cardview_shadow_start_color"
        android:layout_alignBottom="@id/iv_player_photo"
        android:layout_alignLeft="@id/tv_player_name"
        android:layout_marginTop="8dp"/>

</RelativeLayout>