<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".wining_breakup">


    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="Enter the Winning Breakup Serially as Per Order"
        android:textColor="@color/black_text"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black_text"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:text="Rank" />

            <EditText
                android:id="@+id/rank1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:padding="4dp"
                android:inputType="number" />

            <EditText
                android:id="@+id/rank2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:padding="4dp"
                android:inputType="number" />

            <EditText
                android:id="@+id/rank3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:padding="4dp"
                android:inputType="number" />

            <EditText
                android:id="@+id/rank4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:padding="4dp"
                android:inputType="number" />

            <EditText
                android:id="@+id/rank5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:padding="4dp"
                android:inputType="number" />

            <EditText
                android:id="@+id/rank6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:padding="4dp"
                android:inputType="number" />

            <EditText
                android:id="@+id/rank7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:ems="10"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black_text"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:text="Price Amount" />

            <EditText
                android:id="@+id/amount1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:padding="4dp"
                android:inputType="number" />

            <EditText
                android:id="@+id/amount2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:padding="4dp"
                android:inputType="number" />

            <EditText
                android:id="@+id/amount3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:padding="4dp"
                android:inputType="number" />

            <EditText
                android:id="@+id/amount4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:padding="4dp"
                android:inputType="number" />

            <EditText
                android:id="@+id/amount5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:padding="4dp"
                android:inputType="number" />

            <EditText
                android:id="@+id/amount6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:padding="4dp"
                android:inputType="number" />

            <EditText
                android:id="@+id/amount7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:padding="4dp"
                android:inputType="number" />


        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_margin="16dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:textColor="@color/white_text"
        android:textSize="16sp"
        android:background="@color/colorPrimary"
        />
</LinearLayout>