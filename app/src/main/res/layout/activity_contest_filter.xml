                    android:layout_height="wrap_content"
                    android:textColor="@color/black_text"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:paddingTop="5dp"
                    android:paddingStart="3dp"
                    android:layout_marginBottom="10dp"
                    android:text="Entry" />

